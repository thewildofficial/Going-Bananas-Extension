# Environment Configuration for Going Bananas Backend

# Server Configuration
PORT=3000
NODE_ENV=development

# Google Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=chrome-extension://*,http://localhost:*,https://localhost:*

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_TTL=86400

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/going-bananas

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security
JWT_SECRET=your_jwt_secret_here
API_RATE_LIMIT=100

# Feature Flags
ENABLE_CACHING=true
ENABLE_ANALYTICS=false
ENABLE_DEBUG_LOGS=false

# API Configuration
MAX_TEXT_LENGTH=50000
DEFAULT_ANALYSIS_TIMEOUT=30000
ANALYSIS_CONFIDENCE_THRESHOLD=0.7

# External Services
WEBHOOK_URL=
MONITORING_URL=

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Development/Testing
MOCK_GEMINI_API=false
TEST_DATABASE_URL=
